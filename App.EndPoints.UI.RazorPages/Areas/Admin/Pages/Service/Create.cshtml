@page
@using App.Domain.Core.Expert.AppServices
@model App.EndPoints.UI.RazorPages.Areas.Admin.Pages.Service.CreateModel
@inject ICategoryAppService CategoryAppService
@{
    Layout = "Shared/_AdminLayout";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">ایجاد‌ سرویس جدید</h5>
        <small class="text-muted float-end primary-font">برچسب پیش‌فرض</small>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.CreatingService.Title" class="form-label" for="basic-default-fullname">نام کامل</label>
                <input asp-for="@Model.CreatingService.Title" type="text" class="form-control" id="basic-default-fullname" placeholder="کاغذ دیواری">
            </div>

            <div class="mb-3">
                <label asp-for="@Model.CreatingService.CategoryId" class="form-label" for="multicol-country">دسته بندی</label>
                <select asp-for="@Model.CreatingService.CategoryId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                    <option value="">انتخاب</option>
                    @foreach (var category in await CategoryAppService.GetCategories(default))
                    {
                        <option value="@category.Id">@category.Title</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.CreatingService.Description" class="form-label" for="basic-default-message">توضیحات</label>
                <textarea asp-for="@Model.CreatingService.Description" id="basic-default-message" class="form-control" placeholder="متن توضیحات را اینجا بنویسید"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">ارسال</button>
        </form>
    </div>
</div>
